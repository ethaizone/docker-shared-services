# Example .env file for mongodb-db-refresh
# Remote DB connection
REMOTE_DB_HOST=your.remote.host
REMOTE_DB_PORT=27017
REMOTE_DB_USER=youruser
REMOTE_DB_PASSWORD=yourpassword
REMOTE_DB_NAME=remotedb
REMOTE_DB_AUTH_SOURCE=admin

# Local DB connection
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=27017
LOCAL_DB_USER=user
LOCAL_DB_PASSWORD=password
LOCAL_DB_NAME=mydatabase
LOCAL_DB_AUTH_SOURCE=admin

# Collections to skip (space-separated)
SKIP_COLLECTIONS="big_collection_to_skip another_large_collection"

# Compress exported data files (default: true)
COMPRESS_EXPORTS=true
